//EXERCÍCIO - ESCOLHA DA OPERADORA DE TV A CABO

programa
{
	funcao inicio()
	{
		escreva("Escolha uma das opções: 1 - NETFLIX 2 - AMAZON PRIME 3 - HBO MAX 4 - SAIR")
		inteiro menu=0
		escreva("\n" + "Sua escolha: ")
		leia(menu)
		
		escolha(menu)
		{
		caso 1: 
		escreva("OK! ABRIR NETFLIX")
		pare
		
		caso 2: 
		escreva("OK! ABRIR AMAZON PRIME")
		pare
		
		caso 3: 
		escreva("OK! ABRIR HBO MAX")
		pare
		
		caso 4: 
		escreva("SAIR")
		pare
		
		caso contrario: 
		escreva("VOCê DEVE ESCOLHER AS OPÇÕES 1, 2 ou 3")
		}
	}}
